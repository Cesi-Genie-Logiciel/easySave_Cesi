<Window x:Class="EasySave.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasySave v2.0 - ProSoft" 
        Height="700" Width="1200"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Styles modernes -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#D13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A11115"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#107C10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0E5A0E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="20,15">
            <TextBlock Text="EasySave v2.0 - Gestion des Sauvegardes" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Barre d'outils -->
        <Border Grid.Row="1" Background="#F3F3F3" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="âž• Nouveau Job" 
                        Command="{Binding CreateBackupCommand}"
                        Style="{StaticResource SuccessButtonStyle}"/>
                <Button Content="â–¶ï¸ Lancer SÃ©lectionnÃ©" 
                        Command="{Binding ExecuteBackupCommand}"/>
                <Button Content="â–¶ï¸ Lancer Tous" 
                        Command="{Binding ExecuteAllCommand}"/>
                <Button Content="ðŸ—‘ï¸ Supprimer" 
                        Command="{Binding DeleteBackupCommand}"
                        Style="{StaticResource DeleteButtonStyle}"/>
                <Button Content="ðŸ”„ Actualiser" 
                        Command="{Binding RefreshCommand}"/>
            </StackPanel>
        </Border>

        <!-- Liste des jobs avec DataGrid moderne -->
        <DataGrid Grid.Row="2" 
                  ItemsSource="{Binding BackupJobs}" 
                  SelectedItem="{Binding SelectedBackupJob}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  GridLinesVisibility="None"
                  AlternatingRowBackground="#F9F9F9"
                  SelectionMode="Single"
                  HeadersVisibility="Column"
                  Margin="15"
                  FontSize="13">
            
            <DataGrid.Columns>
                <!-- Nom -->
                <DataGridTextColumn Header="Nom du Job" 
                                    Binding="{Binding Name}" 
                                    Width="180"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Source -->
                <DataGridTextColumn Header="Chemin Source" 
                                    Binding="{Binding SourcePath}" 
                                    Width="250"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Cible -->
                <DataGridTextColumn Header="Chemin Cible" 
                                    Binding="{Binding TargetPath}" 
                                    Width="250"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Type -->
                <DataGridTextColumn Header="Type" 
                                    Binding="{Binding BackupType}" 
                                    Width="120"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Ã‰tat -->
                <DataGridTextColumn Header="Ã‰tat" 
                                    Binding="{Binding State}" 
                                    Width="100"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Progression -->
                <DataGridTemplateColumn Header="Progression" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Margin="8,5">
                                <ProgressBar Value="{Binding Progress}" 
                                           Maximum="100" 
                                           Height="20"
                                           Background="#E0E0E0"
                                           Foreground="#107C10"/>
                                <TextBlock Text="{Binding Progress, StringFormat={}{0}%}" 
                                         HorizontalAlignment="Center" 
                                         FontSize="11"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Fichiers -->
                <DataGridTextColumn Header="Fichiers" 
                                    Width="100"
                                    IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0}/{1}">
                            <Binding Path="FilesRemaining"/>
                            <Binding Path="TotalFiles"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Actions -->
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,5">
                                <Button Content="â–¶ï¸" 
                                        Command="{Binding PlayCommand}" 
                                        ToolTip="Lancer"
                                        Padding="8,4"
                                        Margin="2"/>
                                <Button Content="â¸ï¸" 
                                        Command="{Binding PauseCommand}" 
                                        ToolTip="Pause"
                                        Padding="8,4"
                                        Margin="2"/>
                                <Button Content="â¹ï¸" 
                                        Command="{Binding StopCommand}" 
                                        ToolTip="ArrÃªter"
                                        Padding="8,4"
                                        Margin="2"
                                        Style="{StaticResource DeleteButtonStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="45"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Status bar -->
        <Border Grid.Row="3" Background="#F3F3F3" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusText}" 
                           VerticalAlignment="Center"
                           FontSize="13"
                           Foreground="#333333"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Progression Globale:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               FontSize="13"/>
                    <ProgressBar Value="{Binding GlobalProgress}" 
                                 Maximum="100" 
                                 Width="200" 
                                 Height="25"
                                 Background="#E0E0E0"
                                 Foreground="#0078D4"/>
                    <TextBlock Text="{Binding GlobalProgress, StringFormat={}{0:F0}%}" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               FontSize="13"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
