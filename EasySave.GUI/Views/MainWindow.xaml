<Window x:Class="EasySave.GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="EasySave v2.0 - ProSoft" 
        Height="700" Width="1200"
        MinHeight="500" MinWidth="800"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- Styles modernes -->
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#D13438"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#A11115"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#107C10"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0E5A0E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#0078D4" Padding="20,15">
            <TextBlock Text="EasySave v2.0 - Gestion des Sauvegardes" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       Foreground="White"/>
        </Border>

        <!-- Barre d'outils -->
        <Border Grid.Row="1" Background="#F3F3F3" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button Content="âž• Nouveau Job" 
                        Command="{Binding CreateBackupCommand}"
                        Style="{StaticResource SuccessButtonStyle}"/>
                <Button Content="â–¶ï¸ Lancer SÃ©lectionnÃ©" 
                        Command="{Binding ExecuteBackupCommand}"/>
                <Button Content="â–¶ï¸ Lancer Tous" 
                        Command="{Binding ExecuteAllCommand}"/>
                <Button Content="ðŸ—‘ï¸ Supprimer" 
                        Command="{Binding DeleteBackupCommand}"
                        Style="{StaticResource DeleteButtonStyle}"/>
                <Button Content="ðŸ”„ Actualiser" 
                        Command="{Binding RefreshCommand}"/>
            </StackPanel>
        </Border>

        <!-- Grid avec liste et panneau dÃ©tails -->
        <Grid Grid.Row="2" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <GridSplitter Grid.Column="1" 
                          Width="5" 
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Stretch"
                          Background="#E0E0E0"
                          ShowsPreview="True"/>
            
            <!-- Liste des jobs avec DataGrid moderne -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding BackupJobs}" 
                      SelectedItem="{Binding SelectedBackupJob}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      GridLinesVisibility="None"
                      AlternatingRowBackground="#F9F9F9"
                      SelectionMode="Single"
                      HeadersVisibility="Column"
                      FontSize="13">
            
            <DataGrid.Columns>
                <!-- Nom -->
                <DataGridTextColumn Header="Nom du Job" 
                                    Binding="{Binding Name}" 
                                    Width="180"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Source -->
                <DataGridTemplateColumn Header="Chemin Source" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding SourcePath}" 
                                       Padding="8,5"
                                       Cursor="Hand"
                                       ToolTip="Double-cliquez pour ouvrir dans l'explorateur"
                                       MouseLeftButtonDown="OpenFolder_Click"
                                       Tag="{Binding SourcePath}"
                                       TextDecorations="Underline">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#0078D4"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Cible -->
                <DataGridTemplateColumn Header="Chemin Cible" Width="250">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding TargetPath}" 
                                       Padding="8,5"
                                       Cursor="Hand"
                                       ToolTip="Double-cliquez pour ouvrir dans l'explorateur"
                                       MouseLeftButtonDown="OpenFolder_Click"
                                       Tag="{Binding TargetPath}"
                                       TextDecorations="Underline">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#0078D4"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Type -->
                <DataGridTextColumn Header="Type" 
                                    Binding="{Binding BackupType}" 
                                    Width="120"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Ã‰tat -->
                <DataGridTextColumn Header="Ã‰tat" 
                                    Binding="{Binding State}" 
                                    Width="100"
                                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Progression -->
                <DataGridTemplateColumn Header="Progression" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Margin="8,5">
                                <ProgressBar Value="{Binding Progress}" 
                                           Maximum="100" 
                                           Height="20"
                                           Background="#E0E0E0"
                                           Foreground="#107C10"/>
                                <TextBlock Text="{Binding Progress, StringFormat={}{0}%}" 
                                         HorizontalAlignment="Center" 
                                         FontSize="11"
                                         Margin="0,2,0,0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Fichiers -->
                <DataGridTextColumn Header="Fichiers" 
                                    Width="100"
                                    IsReadOnly="True">
                    <DataGridTextColumn.Binding>
                        <MultiBinding StringFormat="{}{0}/{1}">
                            <Binding Path="FilesRemaining"/>
                            <Binding Path="TotalFiles"/>
                        </MultiBinding>
                    </DataGridTextColumn.Binding>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="8,5"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Actions -->
                <DataGridTemplateColumn Header="Actions" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" Margin="8,5">
                                <Button Content="â–¶ï¸" 
                                        Command="{Binding PlayCommand}" 
                                        ToolTip="Lancer"
                                        Padding="8,4"
                                        Margin="2"/>
                                <Button Content="â¸ï¸" 
                                        Command="{Binding PauseCommand}" 
                                        ToolTip="Pause"
                                        Padding="8,4"
                                        Margin="2"/>
                                <Button Content="â¹ï¸" 
                                        Command="{Binding StopCommand}" 
                                        ToolTip="ArrÃªter"
                                        Padding="8,4"
                                        Margin="2"
                                        Style="{StaticResource DeleteButtonStyle}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Height" Value="45"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#E3F2FD"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="#BBDEFB"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
        
        <!-- Panneau de dÃ©tails du job sÃ©lectionnÃ© -->
        <Border Grid.Column="2" 
                Background="#F9F9F9" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                CornerRadius="4"
                Padding="15">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Visible"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding SelectedBackupJob}" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <StackPanel>
                <TextBlock Text="ðŸ“‹ DÃ©tails du Job" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Margin="0,0,0,15"
                           Foreground="#0078D4"/>
                
                <!-- Nom -->
                <TextBlock Text="Nom :" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <TextBlock Text="{Binding SelectedBackupJob.Name}" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <!-- Source -->
                <TextBlock Text="Source :" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <TextBlock Text="{Binding SelectedBackupJob.SourcePath}" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <!-- Cible -->
                <TextBlock Text="Cible :" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <TextBlock Text="{Binding SelectedBackupJob.TargetPath}" 
                           TextWrapping="Wrap"
                           Margin="0,0,0,10"/>
                
                <!-- Type -->
                <TextBlock Text="Type :" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <TextBlock Text="{Binding SelectedBackupJob.BackupType}" 
                           Margin="0,0,0,10"/>
                
                <!-- Ã‰tat -->
                <TextBlock Text="Ã‰tat :" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <TextBlock Text="{Binding SelectedBackupJob.State}" 
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>
                
                <!-- Progression -->
                <TextBlock Text="Progression :" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <ProgressBar Value="{Binding SelectedBackupJob.Progress}" 
                             Maximum="100" 
                             Height="25"
                             Margin="0,5,0,5"
                             Background="#E0E0E0"
                             Foreground="#107C10"/>
                <TextBlock Text="{Binding SelectedBackupJob.Progress, StringFormat={}{0}%}" 
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"
                           Margin="0,0,0,10"/>
                
                <!-- Fichiers -->
                <TextBlock Text="Fichiers :" FontWeight="SemiBold" Margin="0,5,0,2"/>
                <TextBlock Margin="0,0,0,10">
                    <Run Text="{Binding SelectedBackupJob.FilesRemaining, Mode=OneWay}"/>
                    <Run Text=" / "/>
                    <Run Text="{Binding SelectedBackupJob.TotalFiles, Mode=OneWay}"/>
                </TextBlock>
                
                <!-- Boutons d'action -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                    <Button Content="â–¶ï¸" 
                            Command="{Binding SelectedBackupJob.PlayCommand}" 
                            ToolTip="Lancer"
                            Width="40" Height="35"
                            Margin="2"
                            Background="#107C10"
                            Foreground="White"/>
                    <Button Content="â¸ï¸" 
                            Command="{Binding SelectedBackupJob.PauseCommand}" 
                            ToolTip="Pause"
                            Width="40" Height="35"
                            Margin="2"
                            Background="#FF8C00"
                            Foreground="White"/>
                    <Button Content="â¹ï¸" 
                            Command="{Binding SelectedBackupJob.StopCommand}" 
                            ToolTip="ArrÃªter"
                            Width="40" Height="35"
                            Margin="2"
                            Background="#D13438"
                            Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>

        <!-- Status bar -->
        <Border Grid.Row="3" Background="#F3F3F3" Padding="15,10" BorderBrush="#E0E0E0" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="{Binding StatusText}" 
                           VerticalAlignment="Center"
                           FontSize="13"
                           Foreground="#333333"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="Progression Globale:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"
                               FontSize="13"/>
                    <ProgressBar Value="{Binding GlobalProgress}" 
                                 Maximum="100" 
                                 Width="200" 
                                 Height="25"
                                 Background="#E0E0E0"
                                 Foreground="#0078D4"/>
                    <TextBlock Text="{Binding GlobalProgress, StringFormat={}{0:F0}%}" 
                               VerticalAlignment="Center" 
                               Margin="10,0,0,0"
                               FontSize="13"
                               FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
