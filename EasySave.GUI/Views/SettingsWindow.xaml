<Window x:Class="EasySave.GUI.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres - EasySave" 
        Height="520" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,3"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="32"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <Grid Margin="25,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Format des logs:"/>
        <ComboBox Grid.Row="1" x:Name="LogFormatCombo"
                  ItemsSource="{Binding LogFormatValues}"
                  SelectedItem="{Binding LogFormat}"/>

        <Label Grid.Row="2" Content="Destination des logs (Local / Centralized / Both):"/>
        <TextBox Grid.Row="3" Text="{Binding LogDestination, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="4" Content="URL serveur logs (Docker):"/>
        <TextBox Grid.Row="5" Text="{Binding LogServerUrl, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="6" Content="Extensions prioritaires (une par ligne, ex: .pdf):"/>
        <TextBox Grid.Row="7" Height="60" TextWrapping="NoWrap" AcceptsReturn="True"
                 Text="{Binding PriorityExtensionsText, UpdateSourceTrigger=PropertyChanged}" VerticalScrollBarVisibility="Auto"/>

        <Label Grid.Row="8" Content="Extensions à chiffrer (une par ligne):"/>
        <TextBox Grid.Row="9" Height="55" TextWrapping="NoWrap" AcceptsReturn="True"
                 Text="{Binding ExtensionsToEncryptText, UpdateSourceTrigger=PropertyChanged}" VerticalScrollBarVisibility="Auto"/>

        <Label Grid.Row="10" Content="Seuil fichier gros (Ko):"/>
        <TextBox Grid.Row="11" Text="{Binding LargeFileThresholdKoText, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Grid.Row="12" Content="Nom du logiciel métier (processus à détecter):"/>
        <TextBox Grid.Row="13" Text="{Binding BusinessSoftwareName, UpdateSourceTrigger=PropertyChanged}"/>

        <StackPanel Grid.Row="14" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Enregistrer" Command="{Binding SaveCommand}" Background="#107C10" Foreground="White"/>
            <Button Content="Annuler" Command="{Binding CancelCommand}" Background="#6c757d" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
