    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="35"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Nom du Job -->
        <Label Grid.Row="0" Content="Nom du Job:"/>
        <TextBox Grid.Row="0" Margin="0,40,0,0" x:Name="JobNameTextBox"/>

        <!-- Chemin Source -->
        <Label Grid.Row="1" Content="Chemin Source:"/>
        <Grid Grid.Row="1" Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="SourcePathTextBox"/>
            <Button Grid.Column="1" Content="ðŸ“ Parcourir" 
                    Click="BrowseSource_Click" 
                    Margin="5,0,0,0"
                    Padding="10,7"/>
        </Grid>

        <!-- Chemin Cible -->
        <Label Grid.Row="2" Content="Chemin Cible:"/>
        <Grid Grid.Row="2" Margin="0,40,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="TargetPathTextBox"/>
            <Button Grid.Column="1" Content="ðŸ“ Parcourir" 
                    Click="BrowseTarget_Click" 
                    Margin="5,0,0,0"
                    Padding="10,7"/>
        </Grid>

        <!-- Type de Backup -->
        <Label Grid.Row="3" Content="Type de Sauvegarde:"/>
        <ComboBox Grid.Row="3" 
                  Margin="0,40,0,0" 
                  x:Name="BackupTypeComboBox"
                  SelectedIndex="0"
                  Height="35"
                  FontSize="13"
                  Padding="8">
            <ComboBoxItem Content="ComplÃ¨te"/>
