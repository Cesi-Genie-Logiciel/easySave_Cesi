<Window x:Class="EasySave.GUI.Views.CreateJobDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding [CreateJobTitle], Source={StaticResource Lang}}"
        Height="480" Width="550"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="Height">

    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,15,0,5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Height" Value="35"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="30,20,30,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Job name field -->
        <Label Grid.Row="0" Content="{Binding [JobNameField], Source={StaticResource Lang}}"/>
        <TextBox Grid.Row="0" Margin="0,25,0,0" x:Name="JobNameTextBox"/>

        <!-- Source path with browse button -->
        <Label Grid.Row="1" Content="{Binding [SourcePathField], Source={StaticResource Lang}}"/>
        <Grid Grid.Row="1" Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="SourcePathTextBox"/>
            <Button Grid.Column="1" Content="{Binding [Browse], Source={StaticResource Lang}}"
                    Click="BrowseSource_Click"
                    Margin="5,0,0,0"
                    Padding="10,7"/>
        </Grid>

        <!-- Target path with browse button -->
        <Label Grid.Row="2" Content="{Binding [TargetPathField], Source={StaticResource Lang}}"/>
        <Grid Grid.Row="2" Margin="0,25,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="TargetPathTextBox"/>
            <Button Grid.Column="1" Content="{Binding [Browse], Source={StaticResource Lang}}"
                    Click="BrowseTarget_Click"
                    Margin="5,0,0,0"
                    Padding="10,7"/>
        </Grid>

        <!-- Backup type selector -->
        <Label Grid.Row="3" Content="{Binding [BackupTypeField], Source={StaticResource Lang}}"/>
        <ComboBox Grid.Row="3"
                  Margin="0,25,0,0"
                  x:Name="BackupTypeComboBox"
                  SelectedIndex="0"
                  Height="35"
                  FontSize="13"
                  Padding="8">
            <ComboBoxItem Content="{Binding [Complete], Source={StaticResource Lang}}"/>
            <ComboBoxItem Content="{Binding [Differential], Source={StaticResource Lang}}"/>
        </ComboBox>

        <!-- Confirm and cancel buttons -->
        <StackPanel Grid.Row="6"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button x:Name="ConfirmButton" Content="{Binding [Create], Source={StaticResource Lang}}"
                    Click="Create_Click"
                    IsDefault="True"
                    Background="#107C10"
                    Foreground="White"/>
            <Button Content="{Binding [Cancel], Source={StaticResource Lang}}"
                    Click="Cancel_Click"
                    IsCancel="True"
                    Background="#D13438"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
