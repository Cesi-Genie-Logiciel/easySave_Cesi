        </ComboBox>

        <!-- Boutons -->
        <StackPanel Grid.Row="6" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="âœ… CrÃ©er" 
                    Click="Create_Click"
                    IsDefault="True"
                    Background="#107C10"
                    Foreground="White"/>
            <Button Content="âŒ Annuler" 
                    Click="Cancel_Click"
                    IsCancel="True"
